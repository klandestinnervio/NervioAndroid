<?xml version="1.0" encoding="utf-8"?>
<LinearLayout tools:context=".view.SignInActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_500"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_marginBottom="34dp"
        app:cardBackgroundColor="@color/blue_200"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="34dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/ptsanbold"
                android:text="Diagnostic Result"
                android:textColor="#3E4785"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:textStyle="normal"
                android:fontFamily="@font/ptsansregular"
                android:id="@+id/value_result"
                android:text="The results of the diagnostic by the system showed: Aisyah nurul (20 years)"
                android:textColor="#3E4785"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text="00.00%"
                android:fontFamily="@font/ptsanbold"
                android:id="@+id/value_heart"
                android:textColor="#3E4785"
                android:textSize="50sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="possibly declared to have HEART CANCER."
                android:textColor="#3E4785"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:fontFamily="@font/ptsansregular"
                android:text="* For more information, please contact the near hospital"
                android:textColor="#3E4785"
                android:textSize="15sp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/back_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:fontFamily="@font/ptsansregular"
                android:text="@string/back_dashboard"
                android:textColor="#3E4785"
                android:textSize="20sp"
                android:textStyle="normal"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>