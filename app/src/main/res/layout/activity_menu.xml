<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SignInActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tv_welcome"
                android:text="Hi, Welcome!"
                android:fontFamily="@font/ptsanbold"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:text="Hope you're well today"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:fontFamily="@font/ptsansregular"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_welcome"/>

            <ImageView
                android:id="@+id/img_signout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/exit"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/homepage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Our Services"
            android:textColor="#3E4785"
            android:fontFamily="@font/ptsansregular"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_test"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/heart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/ptsanbold"
                        android:text="Diagnostic\nTest"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_history"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                app:cardCornerRadius="20dp"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/test"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/ptsanbold"
                        android:text="Diagnostic\nHistory"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_recommen"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                app:cardCornerRadius="20dp"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/hospital"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/ptsanbold"
                        android:textSize="20sp"
                        android:text="Hospital\nRecommended"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Guide_book"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/help"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/ptsanbold"
                        android:text="Guide \nTest"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>